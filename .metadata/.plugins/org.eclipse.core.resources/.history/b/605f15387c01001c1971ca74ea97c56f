import java.util.Scanner;

/*
Faça um algoritmo que receba dois números, calcule e mostre a soma, a 
multiplicação, divisão, o resto da divisão (entre os dois números) e a raiz 
quadrada de cada número. 
*/


public class exercicio1 {
	
	public static void main(String[] args) {
		
		float soma;
		float multiplicacao;
		float divisao;
		float resto;
		float raizN1;
		float raizN2;
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("Calculadora");
		System.out.println(" ");
		
		System.out.println("Entre com o primeiro número: ");
		float numero1 = input.nextFloat();
		
		System.out.println("Entre com o segundo número: ");
		float numero2 = input.nextFloat();
		
		soma = numero1 + numero2;
		multiplicacao = numero1 * numero2;
		divisao = numero1 / numero2;
		resto = numero1 % numero2;
		raizN1 = (float)Math.sqrt(numero1);
		raizN2 = (float)Math.sqrt(numero2);
		
		System.out.println("A soma dos números é de " + soma);
		System.out.println("A multiplicação dos número é de " + multiplicacao);
		System.out.println("A divissão dos números é de " + divisao);
		System.out.println("O resto da divisão entre os números é de " + divisao);
		System.out.println("A raiz quadrada do número " + numero1 + " é " + raizN1);	
		System.out.println("A raiz quadrada do número " + numero2 + " é " + raizN2);
		
	}
	
}
